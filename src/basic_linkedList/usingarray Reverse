public ListNode reverseList(ListNode head) {
        if (head == null) return null;

        // Step 1: count nodes
        int count = 0;
        ListNode curr = head;
        while (curr != null) {
            count++;
            curr = curr.next;
        }

        // Step 2: copy values into array
        int[] arr = new int[count];
        curr = head;
        int i = 0;
        while (curr != null) {
            arr[i++] = curr.val;
            curr = curr.next;
        }

        // Step 3: overwrite values in reverse order
        curr = head;
        i = count - 1;
        while (curr != null) {
            curr.val = arr[i--];
            curr = curr.next;
        }

        return head;
    }
